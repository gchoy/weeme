<body>
  <div id="map"></div>
  <script>
    function initMap() {
      var uluru = {lat: 37.7749, lng: -122.4194};
      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 8,
        center: uluru
      });
      var marker = new google.maps.Marker({
        position: uluru,
        map: map
      });
    }
  </script>
  <script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBZX6A2DwuFFGA2Ut4EJmvbaW-eQNi0DnY&callback=initMap">
  </script>
</body>

