<head>
  <script src="//maps.google.com/maps/api/js?key=AIzaSyCtP4MzO49Ht9H4q4nPFRi9fLvThHVOHwA"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
</head>

<body>
<%= form_tag locations_path, method: :get do %>
  <%= label :search, "Search Bathrooms near : " %>
  <%= text_field_tag :search, params[:search] %>



  <%= submit_tag "Search" %>
  <% end %>

  <div style='width: 800px;'>
    <div id="map" style='width: 800px; height: 400px;'></div>
  </div>

  

</body>

<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>St Num</th>
      <th>St Name</th>
      <th>Suite</th>
      <th>City</th>
      <th>State</th>
      <th>Zip Code</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>User</th>
      <th>Options</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.street_number %></td>
        <td><%= location.street_name %></td>
        <td><%= location.suite %></td>
        <td><%= location.city %></td>
        <td><%= location.state %></td>
        <td><%= location.zip_code %></td>
        <td><%= location.latitude %></td>
        <td><%= location.longitude %></td>
        <td><%= link_to 'Show', location %></td>
        <% if location.user == current_user %>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure you want to delete this location?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Location', new_location_path %>
<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);

  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>
